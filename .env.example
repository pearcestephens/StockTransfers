# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="Stock Transfers System"
APP_ENV=development
APP_DEBUG=true
APP_URL=https://staff.vapeshed.co.nz/modules/StockTransfers

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=vape_shed_transfers
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# CIS Integration
CIS_BASE_URL=https://staff.vapeshed.co.nz
CIS_API_KEY=your_cis_api_key
CIS_SESSION_NAME=PHPSESSID

# Vend POS API (for outlet and product data)
VEND_DOMAIN=vapeshed.vendhq.com
VEND_CLIENT_ID=your_vend_client_id
VEND_CLIENT_SECRET=your_vend_client_secret
VEND_ACCESS_TOKEN=your_vend_access_token

# NZ Post API (freight integration)
NZPOST_CLIENT_ID=your_nzpost_client_id
NZPOST_CLIENT_SECRET=your_nzpost_client_secret
NZPOST_API_BASE=https://api.nzpost.co.nz
NZPOST_SANDBOX=true

# CourierPost API
COURIERPOST_API_KEY=your_courierpost_api_key
COURIERPOST_API_BASE=https://api.courierpost.co.nz
COURIERPOST_SANDBOX=true

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DATABASE=0

# Logging Configuration
LOG_CHANNEL=daily
LOG_LEVEL=info
LOG_MAX_FILES=14

# Email Configuration (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your_mailgun_username
MAIL_PASSWORD=your_mailgun_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@vapeshed.co.nz
MAIL_FROM_NAME="The Vape Shed Transfers"

# File Storage
STORAGE_DISK=local
STORAGE_PATH=storage
MAX_UPLOAD_SIZE=10485760

# Security Settings
BCRYPT_ROUNDS=12
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Performance Settings
CACHE_DRIVER=redis
CACHE_TTL=3600
ENABLE_QUERY_LOG=false

# Feature Flags
ENABLE_BOX_ALLOCATION=true
ENABLE_AI_ROUTING=false
ENABLE_MOBILE_SCANNING=true
ENABLE_FREIGHT_TRACKING=true

# Development Settings (only for development)
ENABLE_DEBUG_TOOLBAR=false
MOCK_EXTERNAL_APIS=false
ENABLE_SQL_LOGGING=false