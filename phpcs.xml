<?xml version="1.0"?>
<ruleset name="TransfersModuleStandard">
  <description>PSR-12 plus selected additional strictness for Transfers module.</description>
  <file>./stock</file>
  <file>./_shared</file>
  <exclude-pattern>*/backups/*</exclude-pattern>
  <rule ref="PSR12" />
  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="140"/>
      <property name="absoluteLineLimit" value="180"/>
    </properties>
  </rule>
  <rule ref="Generic.Formatting.DisallowMultipleStatements" />
</ruleset>
