{
    "name": "ecigdis/stock-transfers",
    "description": "Stock Transfer Management System for The Vape Shed retail chain",
    "version": "1.0.0",
    "type": "project",
    "keywords": [
        "stock-management",
        "inventory",
        "transfers",
        "retail",
        "vape",
        "php",
        "mariadb"
    ],
    "homepage": "https://github.com/pearcestephens/StockTransfers",
    "license": "proprietary",
    "authors": [
        {
            "name": "Pearce Stephens",
            "email": "pearce.stephens@ecigdis.co.nz",
            "role": "Lead Developer"
        },
        {
            "name": "Ecigdis Limited",
            "email": "tech@ecigdis.co.nz",
            "role": "Organization"
        }
    ],
    "support": {
        "email": "tech@ecigdis.co.nz",
        "wiki": "https://wiki.vapeshed.co.nz",
        "source": "https://github.com/pearcestephens/StockTransfers"
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.5",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "symfony/console": "^6.2",
        "league/flysystem": "^3.12",
        "predis/predis": "^2.1",
        "nesbot/carbon": "^2.66"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.9",
        "psalm/plugin-phpunit": "^0.18",
        "friendsofphp/php-cs-fixer": "^3.13",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "VapeShed\\StockTransfers\\": "src/",
            "VapeShed\\StockTransfers\\Services\\": "stock/services/",
            "VapeShed\\StockTransfers\\Api\\": "stock/api/"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VapeShed\\StockTransfers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 src/ stock/",
        "cs-fix": "php-cs-fixer fix",
        "analyse": "phpstan analyse src stock --level=8",
        "serve": "php -S localhost:8000 -t public",
        "migrate": "php migrate.php up",
        "migrate-rollback": "php migrate.php down",
        "seed": "php seed.php",
        "build": [
            "@cs-fix",
            "@analyse",
            "@test"
        ],
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "company": {
            "name": "Ecigdis Limited",
            "trading_as": "The Vape Shed",
            "website": "https://www.vapeshed.co.nz",
            "locations": "17+ stores across New Zealand"
        },
        "system": {
            "environment": "production",
            "php_version": "8.1+",
            "database": "MariaDB 10.5+",
            "hosting": "Cloudways",
            "framework": "Custom MVC + CIS"
        }
    }
}